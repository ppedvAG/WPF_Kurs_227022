<Window x:Class="RelativeSources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelativeSources"
        mc:Ignorable="d"
        Title="MainWindow" Height="407" Width="493">
    <StackPanel>

        <Slider Minimum="1" Maximum="100" x:Name="Sdr_Wert"
                Value="{Binding ElementName=Rct_Show, Path=Height}"/>

        <Rectangle x:Name="Rct_Show"
                   Fill="Black"
                   Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}"/>

        <StackPanel Background="LightBlue" Margin="30">
            <StackPanel Background="Yellow" Margin="30">
                <WrapPanel Background="Green" Margin="30" Height="100">
                    <Button Content="Hallo"
                            Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=StackPanel, AncestorLevel=2}, Path=Background}"/>
                </WrapPanel>
            </StackPanel>
        </StackPanel>
        
        
    </StackPanel>
</Window>
